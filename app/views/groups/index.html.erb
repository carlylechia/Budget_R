<div class="devise-page">
  <div class="top">
    <a href="users/edit"  title="edit profile"> <i class="fa fa-bars" aria-hidden="true"></i> </a>
    <h2>CATEGORIES</h2>
    <div class="actions">
      <a href="/users/sign_out" data-method="delete" data-confirm="Are you sure?" title="sign out"> <i class="fa fa-power-off" aria-hidden="true"></i> </a>
    </div>
  </div>
  <p style="color: green"><%= notice %></p>

  <div id="groups">
    <% @groups.each do |group| %>
      <%= render group %>
      <p>
        <%= link_to "Show this group", group %>
      </p>
    <% end %>
  </div>

  <%= link_to "New group", new_group_path %>
</div>
