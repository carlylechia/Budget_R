<div class="devise-page block">
  <div class="top">
    <a href="users/edit"  title="edit profile"> <i class="fa fa-bars" aria-hidden="true"></i> </a>
    <h2>CATEGORIES</h2>
    <div class="actions">
      <a href="/users/sign_out" data-method="delete" data-confirm="Are you sure?" title="sign out"> <i class="fa fa-power-off" aria-hidden="true"></i> </a>
    </div>
  </div>
  <div>
    <p style="color: green"><%= notice %></p>

    <div id="groups">
      <% @groups.each do |group| %>
          <%= link_to group do %>
            <%= render group %>
          <% end %>
      <% end %>
    </div>
  </div>
  <div class="btn-div">
    <%= link_to "NEW CATEGORY", new_group_path, class: 'new-cat' %>
  </div>
</div>
